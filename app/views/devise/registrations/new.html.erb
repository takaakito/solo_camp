<div class="container bg-light p-3 mt-5 ">
<h2 class=" text-center mt-5">新規登録</h2>


<div class="row">
<%= form_with model: @user, url: user_registration_path do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
</div>

<div class="row d-flex justify-content-center">
  <div class="col-8">
   <div class="form-group">
    <%= f.label :名前 %><br>
    <%= f.text_field :name,class: "form-control"%>
   </div>
  </div>
</div>


<div class="row row d-flex justify-content-center">
  <div class="col-8">
   <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
   </div>
 </div>
</div>

<div class="row row d-flex justify-content-center">
  <div class="col-8">
   <div class="form-group">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,class: "form-control"%>
   </div>
 </div>
</div>

<div class="row row d-flex justify-content-center">
  <div class="col-8">
   <div class="form-group">
    <%= f.label :パスワードの確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
   </div>
 </div>
</div>


<div class="row row d-flex justify-content-center">
 <div class="col-8">
   <div class="actions">
    <%= f.submit "新規登録",class: "btn btn-primary btn-block" %>
   </div>
  </div>
</div>
<% end %>

<div class="row row d-flex justify-content-center pt-3">
 <div class="col-8">
   <div class="actions">
   <%- if controller_name != 'sessions' %>
   <%= link_to "ログイン", new_session_path(resource_name), class: "btn btn-success btn-block " %><br />
   <% end %>
   </div>
  </div>
</div>

</div>