<div class = "row">
<div id="example-2" class="carousel slide" data-ride="carousel" style="width:1140px">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="assets/1.png"alt="First slide">
    </div>
    <div class="carousel-item">
      <img src="assets/2.png" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img src="assets/3.png" alt="Third slide">
    </div>
    <a class="carousel-control-prev" href="#example-2" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#example-2" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
</div>
 <div class= row>
   <div class = col-4>
    <h2>最近のキャンプ場投稿</h2>
    <% @camps.each do |camp| %>
        ユーザ名<%= camp.user.name%><br>
        <% if camp.image.attached? %>
　　　　<%= image_tag camp.image,  size: "200x150"%>
　　　　<% else %>
        <%= image_tag 'no_image', size: "200x150"%>
　　　　<% end %>
　　　　<p><%= camp.name %></p>
    <% end %>
   </div>
      <div class = col-4>
    <h2>最近のキャンプ飯投稿</h2>
    <% @foods.each do |food| %>
     ユーザ名<%= food.user.name%><br>
     <% if food.food_image.attached? %>
  　 <%= image_tag food.food_image, size: "200x150"%>
　   <% else %>
     <%= image_tag 'no_image', size: "200x150"%>
　   <% end %>
　   <p><%= food.camp_food %></p>
     <% end %>
   </div>
      <div class = col-4>
    <h2>最近の遊び投稿</h2>
    <% @plays.each do |play| %>
          <p><%= play.camp_play %></p>
    <% end %>
   </div>
   </div>
</div>
