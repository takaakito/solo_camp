<div class="container ">
   
   <div class="row btn btn-secondary btn-sm rounded-pill mt-3">　
   <p><%= @food.food_level %></p>
   </div>  
   <div class="row h2 font-weight-bold mt-5">
   <div class="col-10">
   料理名：<%= @food.camp_food%>
   </div>
  <div id ="food_favorite_buttons_<%= @food.id %>">
  <%= render 'food_favorites/favorite-btn', food: @food %>
  </div>     
  </div>
   
   <div class="row h2 font-weight-bold">
   <div class="col-10">
   <p>料理時間：<%= @food.food_time%></p>
   </div>
   
   <div class="col justify-content-end">
   <%= link_to '料理を投稿', new_food_path,class: "btn btn-sm btn-danger " %>
   </div>
   </div>
   
   <div class="row">
   <div class="col-10">
   <p>投稿日：<%= @food.created_at.strftime('%Y/%m/%d') %></p>
   </div>
   <div class=" food_count col justify-content-end h2">
   <%= render 'food_comments/count', food: @food %>
   <%= render 'food_favorites/count', food: @food %>
   </div>
   </div>
   
   
   
   <div class="row">
   <div class="col-3 h6 shadow-lg mt-3">
   <div class="d-flex align-items-center justify-content-center mt-3 mb-3">
   <% if @food.user.profile_image.attached? %>
   <%= image_tag @food.user.profile_image, size: "100x100",class: "rounded-circle"%>
   <% else %>
   <%= image_tag 'no_image.jpg', size: "100x100" %>
   <% end %>
   </div>
   <p class="text-center" >ユーザー：<%= @food.user.name%></p><br>
   <p class="text-center">ひとこと：<%= @food.user.introduction %></p><br>
   <p class="text-center">行動範囲：<%= @food.user.area %></p><br>
   <p class="text-center">キャンプレベル：<%= @food.user.level %></p>
   </div>
   
   <div class="col-9">
  <% if @food.food_image.attached? %>
  <%= image_tag @food.food_image, class:"w-75"%>
  <% else %>
  <%= image_tag 'no_image.jpg',class:"w-75"%>
  <% end %>
　 </div>
　 </div>
   
   
   <div class="row">　
   <div class="col-12 shadow-lg ">
   <p class= "btn btn-sm btn-info mt-3">料理のポイント</p><br>
    <%=@food.food_introduction%>
   <div class = "text-right align-self-end mb-3" >
   <% if @food.user == current_user %>
   <%= link_to "削除", food_path(@food), method: :delete,class: "btn btn-sm btn-danger " %>
   <% end %>
   </div>
   </div>
   </div>
  <h2 class="text-center pt-3 mb-3">みんなからのコメント</h2>
  <div id= "foods">
  <%= render 'food_comments/index', food: @food %>
　</div>
  <%= render 'food_comments/form', food: @food, food_comment: @food_comment %>
  
</div>