<div class="container">
 <div class="row">
  <div class="col-9 mt-3">
   <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-chat-right" viewBox="0 0 16 16">
   <path d="M2 1a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h9.586a2 2 0 0 1 1.414.586l2 2V2a1 1 0 0 0-1-1H2zm12-1a2 2 0 0 1 2 2v12.793a.5.5 0 0 1-.854.353l-2.853-2.853a1 1 0 0 0-.707-.293H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h12z"/>
   </svg>
   <%= @food.food_comments.count%>
   <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bookmarks" viewBox="0 0 16 16">
   <path d="M2 4a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v11.5a.5.5 0 0 1-.777.416L7 13.101l-4.223 2.815A.5.5 0 0 1 2 15.5V4zm2-1a1 1 0 0 0-1 1v10.566l3.723-2.482a.5.5 0 0 1 .554 0L11 14.566V4a1 1 0 0 0-1-1H4z"/>
   <path d="M4.268 1H12a1 1 0 0 1 1 1v11.768l.223.148A.5.5 0 0 0 14 13.5V2a2 2 0 0 0-2-2H6a2 2 0 0 0-1.732 1z"/>
   </svg>
   <%= @food.food_favorites.count %>
  <h2 class="h2 mt-5"><%= @food.camp_food%></h2>
  </div>
     <div class="col-2 text-center pt-4">
   <% if @food.user.profile_image.attached? %>
   <%= image_tag @food.user.profile_image, size: "100x100",class: "rounded-circle"%>
   <% else %>
   <%= image_tag 'no_image', size: "100x100" %>
   <% end %><br>
   <p class="text-center" >ユーザー：<%= @food.user.name%></p>
   </div>
 </div>
 <div class="row justify-content-center mb-3">
  <div class=col-9>
   <div class=" btn btn-outline-dark text-center p-1 mr-3 disabled">
    <%= @food.food_level %>
   </div>
   <div class=" btn btn-outline-dark p-1 text-center disabled">
    <%= @food.food_time%>
   </div>
   <div class= "btn btn-sm btn-danger ml-3"> 
    <%= link_to "削除", food_path(@food), method: :delete, class: "text-white" %>
   </div>
  </div>
  <div class=col-2>
      <% if @food.favorited_by?(current_user) %>
      <%= link_to food_food_favorites_path(@food), method: :delete,class:"btn btn-sm btn-danger"  do %>
      ブックマークから外す
      <% end %>
      <% else %>
      <%= link_to food_food_favorites_path(@food), method: :post,class:"btn btn-sm btn-info" do %>
      ブックマーク
      <% end %>
      <% end %>
  </div>
 </div>
 <div class="row justify-content-center">
  <% if @food.food_image.attached? %>
  <%= image_tag @food.food_image, class:"w-75"%>
  <% else %>
  <%= image_tag 'no_image',class:"w-75"%>
  <% end %>
 </div>
 <div class="row justify-content-center mt-3">
  <div class=col-11>
   <div class=h5>
    <p>ポイント</p>
    <%=@food.food_introduction%>
   </div>
  </div>
 </div>
  <h2 class="text-center pt-3 mb-3">みんなからのコメント</h2>
  　<div class="row">
   <% @food.food_comments.each do |food_comment| %>
  <div class="col-11 mb-3  pt-3 pb-3 border-bottom">
    投稿ユーザー:<%= food_comment.user.name %> / 投稿日<%= food_comment.created_at.strftime('%Y/%m/%d') %><br>
    <%= food_comment.comment %>
    <div class = "text-right align-self-end" >
       <% if food_comment.user == current_user %>
       <%= link_to "削除", food_food_comment_path(food_comment.food, food_comment), method: :delete,class: "btn btn-sm btn-danger " %>
       <% end %>
    </div>
  </div>
  <% end %>
 </div>
 <div class="form-group row mt-3">
  <div class="col-sm-12 col-form-label">
    <%= form_with model: [@food, @food_comment] do |f| %>
    <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに",class:"form-control"%>
    <%= f.submit "送信する",class:"mt-3" %>
    <% end %>
  </div>
 </div>
</div>
  
