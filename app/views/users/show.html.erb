<div class="container">
 <div class="row">
  <div class="col-3 mt-5" >
   <% if @user.profile_image.attached? %>
   <%= image_tag @user.profile_image, size: "150x150" %>
   <% else %>
   <%= image_tag 'no_image', size: "200x200" %>
   <% end %>
   <p><%= @user.name %></p>
   <p>ひとこと：<%= @user.introduction %></p>
   <p>行動範囲：<%= @user.area %></p>
   <p>キャンプレベル：<%= @user.level %></p>
   <% if @user == current_user %>
   <%= link_to "プロフィール編集", edit_user_path(@user),class:"btn btn-outline-secondary" %>
   <% end %>
   </div>
   
   <div class="col-6 mt-5  text-center">
   <p class="h2 mb-4">キャン活ステータス</p>
   <div class="btn btn-outline-success disabled mr-5">コメント数<br>
   <%= current_user.camp_comments.count%>回</div>
   <div class="btn btn-outline-success disabled mr-5">ブックマーク数<br>
   <%= current_user.favorites.count%>個</div>
   <div class="btn btn-outline-success disabled">キャン活投稿数<br>
   <%= current_user.camps.count%>回</div>
   <p class="h2 mt-3">キャン飯ステータス</p>
　 <div class="btn btn-outline-success disabled mr-5 mt-5">コメント数<br>
   <%= current_user.food_comments.count%>回</div>
   <div class="btn btn-outline-success disabled mr-5 mt-5">ブックマーク数<br>
   <%= current_user.food_favorites.count%>個</div>
   <div class="btn btn-outline-success disabled mt-5">キャンプ飯投稿数<br>
   <%= current_user.foods.count%>回</div>
   </div>
   </div>
   
<div class="row ">
   <div class="col-4 mt-5">
   <p class="h3">キャン活投稿ランキング</p>
   <%@camp_my_ranks.each.with_index(1) do |camp, i| %>
    第<%=i%>位　<%=camp.name %>
    <% if camp.image.attached? %>
　　<%= image_tag camp.image,class:"w-100 mt-3"%>
　　<% else %>
    <%= image_tag 'no_image',class:"w-100 mt-3" %>
　　<% end %>
    ブックマーク数：<%=camp.favorites.count %><br>
    <% end %>
   </div>
   <div class="col-4 mt-5">
   <p class="h3">キャン飯投稿ランキング</p>
   <%@food_my_ranks.each.with_index(1) do |food, i| %>
   第<%=i%>位
   <%=food.camp_food%>
   <% if food.food_image.attached? %>
   <%= image_tag food.food_image, class:"w-100 mt-3"%>
   <% else %>
   <%= image_tag 'no_image',class:"w-100 mt-3"%>
   <% end %><br>
   ブックマーク数：<%=food.food_favorites.count %>
   <% end %>
   </div>
   <div class="col-4 mt-5">
   <p class="h3">チルキャン投稿ランキング</p>
   <%@camp_my_ranks.each.with_index(1) do |camp, i| %>
第<%=i%>位　<%=camp.name %>
    <% if camp.image.attached? %>
　　<%= image_tag camp.image,  size: "300x200",class:"mt-3"%>
　　<% else %>
    <%= image_tag 'no_image', size: "300x200",class:"mt-3" %>
　　<% end %>
    ブックマーク数：<%=camp.favorites.count %><br>
    <% end %>
   </div>
 </div>
 
 

  <ul class="nav nav-tabs justify-content-center mt-5" id="myTab" role="tablist">
  <li class="nav-item h2">
    <a class="nav-link active text-secondary" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">MY キャン活</a>
  </li>
  <li class="nav-item h2">
    <a class="nav-link text-secondary" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">ブックマーク</a>
  </li>
  <li class="nav-item h2">
    <a class="nav-link text-secondary" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">MY グルメ飯</a>
  </li>
</ul>

<div class="tab-content" id="myTabContent">
<div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
<div class="row justify-content-center">
   <% @camps.each do |camp| %>
    <div class="col-8 ">
     <div class="card mb-3 mt-3">
      <div class="d-flex flex-row">
      　<div>
          <div class="btn btn-info btn-sm mt-3">#<%= camp.camp_area%><br></div>
          <div class="btn btn-info btn-sm mt-3">#<%= camp.category %></div>
          <div class="h2 mt-2"><%= camp.name %><br></div>
          <div><p class="btn btn-warning btn-sm">おすすめポイント</p><br>
          <%= camp.body.truncate(30)%><br>
          </div>
          <div><%= link_to "もっとみる", camp_path(camp.id),class:"btn btn-primary btn-sm mb-3"%></div>
        </div>
        <% if camp.image.attached? %>
　　　　<%= image_tag camp.image,  size: "300x200",class:"mt-3"%>
　　　　<% else %>
        <%= image_tag 'no_image', size: "300x200",class:"mt-3" %>
　　　　<% end %>
       </div>
      </div>
    </div>
     <% end %>
 </div>
</div>
  
  
<div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
 <div class="row justify-content-center">
  <% @user_favorites.reverse_each do |favorite| %>
  <div class="col-8 ">
   <div class="card mb-3 mt-3">
    <div class="d-flex flex-row">
     <div class="ml-3">
     <div class="btn btn-info btn-sm mt-3">#<%= favorite.camp.camp_area%><br></div>
     <div class="btn btn-info btn-sm mt-3">#<%= favorite.camp.category %></div>
     <div class="h2 mt-2"><%= favorite.camp.name %><br></div>
     <div><p class="btn btn-warning btn-sm">おすすめポイント</p><br>
     </div>
     <%= favorite.camp.body.truncate(30)%><br>
     <%= link_to "もっとみる",camp_path(favorite.camp.id),class:"btn btn-primary btn-sm mb-3"%></div>
     <% if favorite.camp.image.attached? %>
　　 <%= image_tag favorite.camp.image,  size: "300x200",class:"mt-2"%>
　　 <% else %>
     <%= image_tag 'no_image', size: "300x200",class:"mt-3" %>
　　 <% end %>
   </div>
 </div>
</div>
     <% end %>
     <% if @user_favorites.empty? %>
      <h2>お気に入りはありません</h2>
    <% end %> 
  </div>
 </div>
  
  
  <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
       <div class="row justify-content-center">
   <% @foods.each do |food| %>
   <div class="col-3 mt-5 ml-3">
    <div class=" rounded bg-secondary text-white font-small w-50 text-center">
    #<%= food.food_level %></div>
    <div class=" rounded bg-secondary text-white font-small w-50 text-center mt-2">
    #<%= food.food_time%></div>
   <div class="card h-100">
   <%= link_to "もっとみる", food_path(food.id),class:"btn btn-primary btn-sm"%>
   <div class="card-img-top">
    <% if food.food_image.attached? %>
  　<%= image_tag food.food_image,  size: "253x200", class: "mt-n4"%>
　  <% else %>
    <%= image_tag 'no_image', size: "253x200"%>
　  <% end %>
    <div class="card-body">
    <h5 class="card-title text-center"><%= food.camp_food %></h5>
    </div>
    </div>
   </div>
  </div>
  <% end %>
 </div>
  </div>

</div>
