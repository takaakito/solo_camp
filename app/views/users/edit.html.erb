<div class="container  bg-light  col-md-7 mt-5">
<h2 class="text-center pt-5 ">プロフィール編集</h2>

<%= form_with model: @user do |f| %>
<div class="row justify-content-center">
  <div class="form-group">
 　<label for="inputName">名前</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>
</div>
<div class="row justify-content-center">
  <div class="form-group">
    <label for="inputIntroduction">ひとこと</label>
    <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"ひとこと"%>
  </div>
</div>

<div class="row justify-content-center">
    <div class="form-group">
      <label for="inputImage">プロフィール画像</label>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
    </div>
</div>
<div class="row justify-content-center">
    <div class="form-group">
      <label for="inputArea">行動範囲</label>
      <%= f.select :area, User.areas.keys, {}, {class: 'hoge'}%>
    </div>
</div>
<div class="row justify-content-center">
    <div class="form-group">
       <label for="inputLevel">キャンプレベル</label>
      <%= f.select :level, User.levels.keys, {}, {class: 'hoge'}%><br>
      <%= f.submit "変更を保存" %>
     <% end %>
    </div>
</div>

</div>
