<h2>プロフィール編集</h2>
<%= form_with model: @user do |f| %>
　<label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
　<label for="inputIntroduction">ひとこと</label>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"ひとこと"%>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
　<label for="inputArea">行動範囲</label>
  <%= f.select :area, User.areas.keys, {}, {class: 'hoge'}%>
    <label for="inputLevel">キャンプレベル</label>
  <%= f.select :level, User.levels.keys, {}, {class: 'hoge'}%>
  <%= f.submit "変更を保存" %>
<% end %>
